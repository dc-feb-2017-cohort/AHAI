<div class="home_wrapper">


<nav class="home_nav_div cf">
  <img id="logo" src="/assets/logo.png" alt="logo">
  <ul id="home_nav">
    <li> <a href="/about"> About </a> </li>
    <li> <a href="/contact"> Contact Us </a> </li>
  </ul>
</nav>


<div id = "search">
<h1 id="title">SMARTA</h1>
<form action="/search_result" method="post">
    <label>search_term</label><input type="text" name="search_term">
    <label>Route</label><select name="route" id="route">
        {{#each routes}}
            <option value="{{this.route_id}}">{{this.name}}</option>

        {{/each}}
    </select>

    <label>Stop</label><select id="stop" name="stop">
        {{#each stops}}
            <option class = '{{this.route_id}} stop_option' value="{{this.stop_id}}">{{this.name}}</option>

        {{/each}}
    </select>
  <label>zipcode: </label><input type="text" name="zipcode" placeholder = "required"><br>
  <!-- <label>category: </label><input type="text" name="category"><br>
  <label>subcategory: </label><input type="text" name="subcategory"><br> -->
  <label>limit</label><input type="number" name="limit" min="1" max="50" step="1" value="20">
  <label>rating</label><input type="number" name="rating" min="1" max="5" step="0.5">
  <label>price</label><input type="number" name="price" min="1" max="4" step="1" value="4">
  <!-- <label>walking time(minutes): </label><input type="number" name="walkingtime" min="1" max="30" step="1"><br>
  <label>bus or train: <label>
    <select name="transittype">
      <option value="bus">bus</option>
      <option value="train">train</option>
      <option value="both">both</option>
    </select> -->
  <label>table or map view: <label>
    <select name="viewtype">
        <option value="map">map</option>
        <option value="table">table</option>
    </select>
  <button type="submit">Search</button>
</form>

</div>
</div>

<script type="text/javascript">

    $('#route').on('change', (event)=>{
        $('#stop').show();
        var current = $('#route').val();
        $('.'+current).show();
    });
</script>
