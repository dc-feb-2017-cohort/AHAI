

<table style = "width: 90%">

  <tr>
    <th> Name </th>
    <th> Rating </th>
    <th> Price </th>
    <th> Link </th>
  </tr>
  {{#each locations}}

  <tr>
    <td> {{this.name}}</td>
    <td> {{this.rating}} </td>
    <td> {{this.price}}</td>
    <td> <a href="{{this.url}}"> Go to Yelp </a> </td>
  </tr>

  {{/each}}

</table>
